# .editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{json, jsonc, yml, html, md, css, scss, js, jsx, ts, tsx, rb, nix}]
indent_style = space
indent_size = 2

[*.{lua, tex, cls, sty}]
indent_style = space
indent_size = 3

[*.{c, java, rs, py}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{go}]
indent_style = tab
indent_size = 8
